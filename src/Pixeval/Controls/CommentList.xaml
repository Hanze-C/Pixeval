<UserControl
    x:Class="Pixeval.Controls.CommentList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:illustrationViewer="using:Pixeval.Pages.IllustrationViewer"
    xmlns:local="using:Pixeval.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="CommentDataTemplate" x:DataType="illustrationViewer:CommentBlockViewModel">
            <local:CommentBlock
                HorizontalAlignment="Stretch"
                DeleteHyperlinkButtonTapped="CommentBlock_OnDeleteHyperlinkButtonTapped"
                RepliesHyperlinkButtonTapped="CommentBlock_OnRepliesHyperlinkButtonTapped"
                ViewModel="{x:Bind}" />
        </DataTemplate>
    </UserControl.Resources>
    <ListView
        x:Name="CommentsList"
        IsItemClickEnabled="False"
        ItemContainerStyle="{StaticResource ListViewItemNoStyle}"
        ItemTemplate="{StaticResource CommentDataTemplate}"
        SelectionMode="None">
        <ListView.Transitions>
            <AddDeleteThemeTransition />
        </ListView.Transitions>
    </ListView>
</UserControl>
