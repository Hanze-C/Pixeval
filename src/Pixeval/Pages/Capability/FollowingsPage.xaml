<controls:EnhancedPage
    x:Class="Pixeval.Pages.Capability.FollowingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:actions="using:Pixeval.Actions"
    xmlns:controls="using:Pixeval.Controls"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:markup="using:Pixeval.Controls.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    ClearCacheAfterNavigation="True"
    SizeChanged="FollowingsPage_OnSizeChanged"
    mc:Ignorable="d">
    <Grid>
        <SplitView
            x:Name="MainSplitView"
            CompactPaneLength="300"
            DisplayMode="CompactOverlay"
            IsPaneOpen="True"
            OpenPaneLength="1000"
            PaneBackground="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
            PaneClosing="MainSplitView_OnPaneAction"
            PaneOpening="MainSplitView_OnPaneAction">
            <SplitView.Pane>
                <Grid
                    x:Name="ContentGrid"
                    Width="{x:Bind MainSplitView.OpenPaneLength}"
                    Padding="5"
                    HorizontalAlignment="Left"
                    RowSpacing="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <controls:IconButton
                        Width="40"
                        Height="40"
                        Icon="{markup:FontSymbolIcon Glyph=GlobalNavButtonE700}">
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="Tapped">
                                <actions:NavigatePropertyAction PropertyName="IsPaneOpen" TargetObject="{x:Bind MainSplitView}" />
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </controls:IconButton>
                    <controls:AdvancedItemsView
                        x:Name="IllustratorItemsView"
                        Grid.Row="1"
                        ItemsSource="{x:Bind ViewModel.DataProvider.View}"
                        LayoutType="Grid"
                        LoadMoreRequested="IllustratorListView_OnLoadMoreRequested"
                        Loaded="IllustratorListView_OnLoaded"
                        MinItemWidth="300"
                        SelectionChanged="IllustratorListView_OnSelectionChanged"
                        SelectionMode="Single">
                        <controls:AdvancedItemsView.ItemTemplate>
                            <DataTemplate x:DataType="controls:IllustratorViewModel">
                                <ItemContainer>
                                    <controls:IllustratorProfile RequestTeachingTip="IllustratorProfileOnRequestTeachingTip" ViewModel="{x:Bind}" />
                                </ItemContainer>
                            </DataTemplate>
                        </controls:AdvancedItemsView.ItemTemplate>
                    </controls:AdvancedItemsView>
                    <StackPanel
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="20"
                        Visibility="{x:Bind ViewModel.HasNoItems, Mode=OneWay}">
                        <Image
                            Width="200"
                            Height="200"
                            Source="/Assets/Images/empty-box.png" />
                        <TextBlock
                            x:Uid="/FollowingPage/ResultIsEmptyTextBlock"
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource PixevalTitleFontSize}" />
                    </StackPanel>
                    <TeachingTip x:Name="FollowingPageTeachingTip" Grid.Row="0" />
                </Grid>
            </SplitView.Pane>
            <Frame x:Name="IllustratorContentViewerFrame" />
        </SplitView>
    </Grid>
</controls:EnhancedPage>
